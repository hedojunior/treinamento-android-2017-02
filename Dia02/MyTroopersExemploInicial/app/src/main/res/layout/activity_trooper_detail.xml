<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="2"
    tools:context="com.hedo.mytroopers.TrooperDetailActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="@dimen/trooper_detail_left_padding"
        android:paddingTop="@dimen/trooper_detail_top_padding">

        <TextView
            android:id="@+id/trooper_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:textSize="@dimen/small_text" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/trooper_picture_imv"
            android:layout_width="@dimen/trooper_image_width"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/trooper_detail_top_padding"
            android:contentDescription="@string/imagem_do_trooper"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/trooper_affiliation_imv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trooper_picture_imv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/imagem_afiliacao_trooper" />

    </RelativeLayout>
</LinearLayout>

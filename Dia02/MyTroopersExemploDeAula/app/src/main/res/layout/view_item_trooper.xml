<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/trooper_item_height"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/trooper_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/default_item_sidewards_margin"
        android:text="Stormtrooper"
        android:textSize="20sp" />


    <ImageView
        android:id="@+id/trooper_affiliation_imv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/default_item_sidewards_margin"
        android:contentDescription="@string/trooper_affiliation_cdesc"
        android:src="@drawable/first_order" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/separator_color" />

</RelativeLayout>